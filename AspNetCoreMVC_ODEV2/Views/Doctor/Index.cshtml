@model List<AspNetCoreMVC_ODEV2.Models.Doctor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Doctor/Index</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if(Model.Count > 0)
            {
                @foreach(AspNetCoreMVC_ODEV2.Models.Doctor d in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><a href="~/Doctor/Detail/@d.Id">@d.FirstName @d.LastName</a></h5>
                                    <!-- Product price-->
                                    @d.Profession
                                </div>
                            </div>
                            <!-- Product actions-->
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>


